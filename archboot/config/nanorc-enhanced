# Honey Badger OS - nano Editor Configuration
# Enhanced nano configuration for development work

# Enable all the useful features
set autoindent          # Automatically indent new lines
set backup             # Create backup files  
set backupdir "~/.nano/backups"  # Backup directory
set boldtext           # Use bold instead of reverse video
set brackets ""')>]}"  # Set matching brackets
set casesensitive      # Case sensitive search by default  
set constantshow       # Show cursor position constantly
set fill 80            # Set width for hard wrap
set historylog         # Save search/replace history
set linenumbers        # Show line numbers
set locking            # Use file locking
set mouse              # Enable mouse support
set multibuffer        # Allow multiple file buffers
set nonewlines         # Don't add newlines at EOF
set positionlog        # Save cursor position
set quickblank         # Quick statusbar blanking
set regexp             # Enable regular expressions
set smarthome          # Smart home key behavior
set smooth             # Smooth scrolling  
set softwrap           # Soft wrap long lines
set suspend            # Allow nano to be suspended
set tabsize 4          # Set tab width to 4 spaces
set tabstospaces       # Convert tabs to spaces
set tempfile           # Save automatically on exit
set titlecolor brightwhite,blue    # Title bar colors
set statuscolor brightwhite,green  # Status bar colors
set keycolor cyan                  # Key stroke color
set numbercolor cyan               # Line number color
set whitespace "»·"               # Whitespace characters
set wordbounds         # Better word boundary detection

# Include all syntax highlighting
include "/usr/share/nano/*.nanorc"

# Custom syntax highlighting for additional file types
syntax "Git Commit" "COMMIT_EDITMSG$" "\.git/COMMIT_EDITMSG$"
color yellow "^#.*"
color magenta "^#	modified:.*"
color red "^#	deleted:.*"
color green "^#	new file:.*"
color brightblue "^#	renamed:.*"

syntax "Docker" "Dockerfile[^/]*$" "\.dockerfile$"
color brightblue "^(FROM|MAINTAINER|RUN|CMD|LABEL|EXPOSE|ENV|ADD|COPY|ENTRYPOINT|VOLUME|USER|WORKDIR|ARG|ONBUILD|STOPSIGNAL|HEALTHCHECK|SHELL)"
color brightgreen "^(FROM|MAINTAINER|RUN|CMD|LABEL|EXPOSE|ENV|ADD|COPY|ENTRYPOINT|VOLUME|USER|WORKDIR|ARG|ONBUILD|STOPSIGNAL|HEALTHCHECK|SHELL) .*$"
color yellow "\$\{?[A-Z_][A-Z_0-9]*\}?"
color brightred "\".*\"|'.*'"

syntax "YAML" "\.ya?ml$"
color green "^[[:space:]]*[A-Za-z_][A-Za-z0-9_]*[[:space:]]*:"
color brightcyan "^[[:space:]]*-[[:space:]]*"
color yellow "\".*\"|'.*'"
color red "#.*$"
color brightblue "^---$|^\.\.\.$"

# Key bindings
bind ^Q exit all           # Quit
bind ^S savefile main     # Save
bind ^W writeout main     # Write out  
bind ^O writeout main     # Alternate save
bind ^X cut main          # Cut
bind ^C copy main         # Copy
bind ^V paste main        # Paste
bind ^P location main     # Show position
bind ^T gotoline main     # Go to line
bind ^_ gotoline main     # Alternate go to line
bind ^F whereis main      # Find/search
bind ^H replace main      # Replace
bind ^Z suspend main      # Suspend
bind M-U undo main        # Undo
bind M-R redo main        # Redo
bind ^A mark main         # Set mark
bind ^K cut main          # Cut line
bind ^U paste main        # Paste
bind M-A mark main        # Mark text
bind M-6 copy main        # Copy marked text

# Function key bindings
bind F1 help main
bind F2 savefile main
bind F3 whereis main
bind F4 replace main
bind F5 insert main
bind F6 speller main
bind F7 gotoline main
bind F8 mark main
bind F9 cut main
bind F10 paste main
bind F11 curpos main
bind F12 browser main