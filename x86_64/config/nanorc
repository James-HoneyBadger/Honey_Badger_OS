# Honey Badger OS Nano Configuration ðŸ¦¡
# User-friendly defaults with Honey Badger theming

# Enable line numbers
set linenumbers

# Enable auto-indentation
set autoindent

# Show current position in the file
set constantshow

# Enable soft wrapping of long lines
set softwrap

# Enable mouse support
set mouse

# Set tab size to 4 spaces
set tabsize 4

# Convert tabs to spaces
set tabstospaces

# Enable smooth scrolling
set smooth

# Show a helpful shortcut bar at the bottom
set titlebar

# Enable syntax highlighting
include "/usr/share/nano/*.nanorc"

# Honey Badger color scheme for better readability
set titlecolor brightwhite,brown
set statuscolor black,yellow
set selectedcolor brightwhite,magenta
set stripecolor ,yellow
set scrollercolor cyan
set numbercolor brightcyan
set keycolor brightcyan
set functioncolor brightgreen
set errorcolor brightwhite,red

# Show whitespace
set whitespace "Â»Â·"
set punct "!.?"
set brackets ""')>]}""

# Enable backup files
set backup
set backupdir "/tmp"

# Enable undo/redo
set undodir "/tmp"

# Disable the help text at the bottom
set nohelp