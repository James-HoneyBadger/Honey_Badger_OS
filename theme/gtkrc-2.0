# Honey Badger OS GTK Theme
# Dark theme with honey and black color scheme

gtk-theme-name = "HoneyBadger-Dark"
gtk-icon-theme-name = "HoneyBadger-Icons"
gtk-font-name = "Cantarell 11"
gtk-cursor-theme-name = "HoneyBadger-Cursor"
gtk-cursor-theme-size = 24
gtk-toolbar-style = GTK_TOOLBAR_BOTH_HORIZ
gtk-toolbar-icon-size = GTK_ICON_SIZE_LARGE_TOOLBAR
gtk-button-images = 1
gtk-menu-images = 1
gtk-enable-event-sounds = 1
gtk-enable-input-feedback-sounds = 1
xft-antialias = 1
xft-hinting = 1
xft-hintstyle = hintfull
xft-rgba = rgb